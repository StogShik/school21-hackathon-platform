<%- include('../partials/header.ejs', { title: 'Кейсы', user: user }) %>
<h1>Список кейсов</h1>
<div class="row">
  <% cases.forEach(caseItem => { %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= caseItem.title %></h5>
            <p class="card-text"><%= caseItem.description %></p>
            <p class="card-text"><small class="text-muted">Создан: <%= new Date(caseItem.createdAt).toLocaleDateString() %></small></p>
          </div>
        </div>
      </div>
  <% }); %>
</div>
<%- include('../partials/footer.ejs') %>
