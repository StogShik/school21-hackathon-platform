<%- include('./admin_header.ejs', { title: 'Кейсы', user: user, error: error, success: success }) %>

<div class="mb-3">
    <a href="/admin/cases/new" class="btn btn-success">Создать новый кейс</a>
  </div>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Дата создания</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% cases.forEach(item => { %>
        <tr>
          <td><%= item.title %></td>
          <td><%= item.description %></td>
          <td><%= new Date(item.createdAt).toLocaleDateString() %></td>
          <td>
            <form action="/admin/cases/<%= item._id %>/delete" method="POST" onsubmit="return confirm('Вы уверены, что хотите удалить этот кейс?');">
              <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="fa-solid fa-trash-can"></i>
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<%- include('../partials/footer.ejs') %>
