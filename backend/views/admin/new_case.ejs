<%- include('./admin_header.ejs', { title: 'Создать кейс', user: user, error: error, success: success }) %>

<form action="/admin/cases" method="POST">
  <div class="form-group">
    <label for="title">Название кейса</label>
    <input type="text" name="title" id="title" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="description">Описание кейса</label>
    <textarea name="description" id="description" class="form-control" rows="5" required></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Создать кейс</button>
</form>

